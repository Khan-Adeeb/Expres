<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>

    <div class="main">
        <div class="container">
    
        </div>
    </div>
        
    
        <script>
    
            const url='https://dummyjson.com/products/search?q=mobile';
            async function fetchlaptop(url){
                const response = await fetch(url,{mode:"no-cors"});
                const json= await response.json();
                const data = await json.products;
                return data;  
            }
            async function renderData(){
                const data= await fetchlaptop();
                const output= document.getElementsByClassName('container')[0];
                let html="";
                await data.map(products=>{
                    html+= `
                    <div class="card shadow p-3 mb-5 bg-body rounded-4" style="width: 18rem;">
                    <img src="${products.thumbnail}" class="card-img-top shadow-sm p-3 mb-5 bg-body rounded placeholder-glow" alt="..." width=100px height=250px>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title placeholder-glow">${products.title}</h5>
                        <p class="card-text price placeholder-glow">Rs.${products.price}</p>
                        <p class="card-text price placeholder-glow">Rs.${products.description}</p>
                    </div>
                    </div>`  
                    });
                
                    output.innerHTML=html;
    
            }

        renderData();

        
    </script>
    
</body>
</html>